<beans xml:id="api" xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean class="net.firejack.platform.core.utils.Factory">
        <property name = "adapters">
            <list>
                <bean class="net.firejack.platform.core.adapter.DateTimeAdapter"/>
                <bean class="net.firejack.platform.core.adapter.XmlGregorianCalendarAdapter"/>
            </list>
        </property>
    </bean>

    <context:component-scan base-package="net.firejack.platform.core.domain"/>
    <context:component-scan base-package="net.firejack.platform.core.utils"/>
    <context:component-scan base-package="net.firejack.platform.api"/>
    <context:component-scan base-package="net.firejack.platform.processor"/>

</beans>